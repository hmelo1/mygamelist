<% if @screenshots.count > 0 %>
  <br>
  <div class="row">
    <% @screenshots.each do |screenshot| %>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading preview">
            <%= image_tag screenshot.image.url() %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
