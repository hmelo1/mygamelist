<div class="row">
<%= render partial: "games_menu" %>
<!-- middle panel -->
  <div class="col-md-9" data-id="<%= "#{params[:id]}"%>">
    <a href ="#" class="js-prev-games btn btn-secondary" style ="float: left; font-size: 3em; color: Black">
      <i class="fa fa-chevron-circle-left" aria-hidden="true"></i> </a>
    <a href ="#" class="js-next-games btn btn-secondary" style ="float: right; font-size: 3em; color: Black">
      <i class="fa fa-chevron-circle-right" aria-hidden="true"></i> </a>
      <%= render partial: "game_panel" %>
  </div>
</div>

<div class="col-md-12">
  <br>
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Comments Section:</h2>
      </div>
      <div class="panel-body">
        <% if user_signed_in? %>
            <%= form_for ([@game, @comment]) do |f|%>
            <%= f.text_area :content, rows: 5, class: 'form-control' %>
            <%= f.submit 'New Comment', class: "btn btn-default btn-lg" %>
          <% end %>
        <% end %>
      </div>
      <div class="panel-body">
        <br>
        <% @comments.each do |comment| %>
          <%= comment.content %>
          By: <%= comment.username %>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
